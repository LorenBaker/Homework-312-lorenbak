<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.lbconsulting.homework_312_lorenbak.MainActivity"
	tools:ignore="MergeRootFrame" >

	<TextView
		android:id="@+id/tvEmptyFragTitles"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:text="@string/tvEmptyFragTitles_text"
		android:textSize="28sp"
		android:textStyle="bold|italic"
		android:visibility="gone" />

	<TextView
		android:id="@+id/pbLoadingIndicator"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:text="Loading Indicator"
		android:textSize="28sp"
		android:textStyle="bold|italic"
		android:visibility="gone" />

</FrameLayout>